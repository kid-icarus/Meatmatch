extend layout

block content
  - var isCorrect = userAnswer === match.rightAnswer;
  .match
    img(src=match.gif, alt='')
    ul.answers
      each answer in match.answers
        - var classes = []
        - if (answer === userAnswer) classes.push('chosen')
        - if (answer === match.rightAnswer) classes.push('correct')
        li(class=classes.join(' '))= answer
    h2(class=isCorrect ? 'correct' : '')= isCorrect ? 'Correct' : 'Wrong'
    a.button(href='/') More Meat
  .footer
    .stats
      span.stats-correct
      /
      span.stats-total
    a.github(href='https://github.com/kid-icarus/meatmatch', target='_blank')
      | GitHub
  
  script(type='text/javascript').
    window.isCorrect = #{isCorrect};
